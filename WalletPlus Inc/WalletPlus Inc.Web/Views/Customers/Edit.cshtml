@using WalletPlus_Inc.Web.DATA.Entities
@model Customers


<div class="row">
<form  asp-action="Edit" asp-controller="Customers">
    <input type="hidden" asp-for="Id"/>
    <div class="row mb-2">
        <div class="col-6">
            <label class="col-2">FirstName</label>
            <input class="col-4" asp-for="FirstName"/>
        </div>
        <div class="col-6">
            <label class="col-2">MiddleName</label>
            <input class="col-4" asp-for="MiddleName"/>
        </div>

        <div class="col-6">
            <label class="col-2">LastName</label>
            <input class="col-4" asp-for="LastName"/>
        </div>

    </div>

    <div class="row mb-2">
        <div class="col-6">
            <label class="col-2">DateOfBirth</label>
            <input class="col-4" asp-for="DateOfBirth"/>
        </div>
        <div class="col-6">
            <label class="col-2">Gender</label>
            <select class="col-4" asp-for="Gender">

                <option value="1">Female</option>
                <option value="2">Male</option>
            </select>
        </div>
    </div>
    </div>
        <div class="col-6">
            <label class="col-2">MaritalStatus</label>
            <select class="col-4" asp-for="MaritalStatus">

                <option value="1">Single</option>
                <option value="2">Married</option>
            </select>
        </div>

    <div class="row mb-2">
    <div class="col-8">
            <label class="col-2">State</label>
            <input class="col-6" asp-for="State"/>
        </div>
        </div>

    <div class="row mb-2">
        <div class="col-6">
            <label class="col-2">Country</label>
            <input class="col-4" asp-for="Country"/>
        </div>
        <div class="col-6">
            <label class="col-2">City</label>
            <input class="col-4" asp-for="City"/>
        </div>
        </div>


        <<div class="row">
            <button type="submit" class="btn btn-primary btn-lg">Save Customer</button>
        </div>
        
    </Form>



</div>

